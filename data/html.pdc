<!DOCTYPE html>
<!-- Boilerplate from Pandoc template -->
<html xmlns="http://www.w3.org/1999/xhtml" lang="$lang$" xml:lang="$lang$"$if(dir)$ dir="$dir$"$endif$>
    <head>
        <meta charset="utf-8" />
        <meta name="generator" content="pandoc" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes" />
$for(author-meta)$
        <meta name="author" content="$author-meta$" />
$endfor$
$if(date-meta)$
        <meta name="dcterms.date" content="$date-meta$" />
$endif$
$if(keywords)$
        <meta name="keywords" content="$for(keywords)$$keywords$$sep$, $endfor$" />
$endif$
        <title>$if(title-prefix)$$title-prefix$ â€“ $endif$$pagetitle$</title>
$for(css)$
        <link rel="stylesheet" href="$css$" />
$endfor$
$if(math)$
    $math$
$endif$
$for(header-includes)$
    $header-includes$
$endfor$
    </head>
$if(toc)$
    <!-- Don't display header -->
$else$
    <header>
        <!-- header.pdc -->
        ${ header() }
    </header>
$endif$
    <body>
$if(toc)$
        <!-- Set `toc: true` in a markdown file's frontmatter to display -->
        <!-- the TOC sidebar. Pandoc may render the TOC regardless. In -->
        <!-- which case, set `toc: false` explicitly to prevent rendering -->
        <div class="sidebar">
            <div class="logo">
                <a href="https://riff.cx">
                    <picture>
                        <source srcset="../assets/logo-yellow.png" media="(prefers-color-scheme: dark)">
                        <img src="../assets/logo-black.png">
                    </picture>
                </a>
            </div>
            <nav id="$idprefix$TOC" role="doc-toc">
                $table-of-contents$
            </nav>
        </div>
        <div class="main-left">
$else$
        <div class="main-center">
$endif$
            <div class="main">
$if(title)$
        <h1 class="title">$title$</h1>
    $if(subtitle)$
        <p class="subtitle">$subtitle$</p>
    $endif$
    $for(author)$
        <span class="postinfo"><a href="https://darryl.cx">$author$</a></span>
        <br>
    $endfor$
    $if(date)$
        <span class="postinfo">$date$</span>
    $endif$
$endif$
$for(before)$
        <p class=before-after>$before$</p>
$endfor$
        <article>
$body$
        </article>
$for(after)$
        <p class=before-after>$after$</p>
$endfor$
        <footer>
            <!-- footer.pdc -->
            ${ footer() }
        </footer>
            </div>
        </div>
    </body>
</html>
